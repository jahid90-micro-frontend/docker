# three node (two workers) cluster config
kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
- role: control-plane
  image: {{ .Values.digest }}
- role: worker
  image: {{ .Values.digest }}
- role: worker
  image: {{ .Values.digest }}
containerdConfigPatches:
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.mirrors."docker.io"]
      endpoint = ["http://mirror.jahiduls.mint", "https://registry-1.docker.io"]
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.mirrors."ghcr.io"]
      endpoint = ["http://mirror.jahiduls.mint"]
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.mirrors."quay.io"]
      endpoint = ["http://mirror.jahiduls.mint"]
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.mirrors."k8s.gcr.io"]
      endpoint = ["http://mirror.jahiduls.mint"]
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.mirrors."registry.jahiduls.mint"]
      endpoint = ["http://registry.jahiduls.mint"]
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.configs."mirror.jahiduls.mint".tls]
      insecure_skip_verify = true
  - |-
    [plugins."io.containerd.grpc.v1.cri".registry.configs."registry.jahiduls.mint".tls]
      insecure_skip_verify = true
