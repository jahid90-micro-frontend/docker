apiVersion: apps/v1
kind: Deployment
metadata:
  name: pi-nfs-client-provisioner
  labels:
    app: pi-nfs-client-provisioner
  namespace: kube-storage

spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: pi-nfs-client-provisioner
  template:
    metadata:
      labels:
        app: pi-nfs-client-provisioner
    spec:
      serviceAccountName: nfs-client-provisioner
      containers:
        - name: pi-nfs-client-provisioner
          image: k8s.gcr.io/sig-storage/nfs-subdir-external-provisioner:v4.0.2
          volumeMounts:
            - name: pi-nfs-client-root
              mountPath: /persistentvolumes
          env:
            - name: PROVISIONER_NAME
              value: jahiduls.io/nfs-pi
            - name: NFS_SERVER
              value: 192.168.1.7
            - name: NFS_PATH
              value: /export/data
      volumes:
        - name: pi-nfs-client-root
          nfs:
            server: 192.168.1.7
            path: /export/data
